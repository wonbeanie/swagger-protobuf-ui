{
  "name": "swagger-protobuf-ui",
  "version": "1.1.0",
  "description": "swagger-ui-bundle communicating by protobuf",
  "main": "build/swagger-protobuf-core.js",
  "files": [
    "build"
  ],
  "directories": {
    "example": "example"
  },
  "scripts": {
    "dev": "webpack --mode development --config webpack.core.js",

    "build": "webpack --mode production --config webpack.core.js",
    "build:lite": "webpack --mode production --config webpack.lite.js",

    "start": "webpack serve --open --mode development --config webpack.core.js",
    "start:test": "webpack serve --mode development --config webpack.core.js",
    "start:test:lite": "webpack serve --mode development --config webpack.lite.js",
    "start:server": "cd example/server && npm run start",

    "test": "npx jest --verbose",
    "test:coverage": "npx jest --verbose --coverage",

    "lint": "eslint src/",

    "prettier": "npx prettier --write src/",
    "prettier:check": "npx prettier --check src/",
    
    "e2e": "npm run e2e:core && npm run e2e:lite",
    "e2e:core": "npx playwright test -c playwright.config.core.ts",
    "e2e:lite": "npx playwright test -c playwright.config.lite.ts",
    "e2e:ui": "npx playwright test --ui",
    "e2e:start-server": "concurrently \"npm run start:test\" \"npm run start:server\"",
    "e2e:start-server:lite": "concurrently \"npm run start:test:lite\" \"npm run start:server\""
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/swagger-ui-dist": "^3.30.6",
    "babel-loader": "^10.0.0",
    "blob-polyfill": "^9.0.20240710",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jiti": "^2.6.0",
    "path": "^0.12.7",
    "prettier": "^3.6.2",
    "serve": "^14.2.5",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "dompurify": "^3.2.7",
    "swagger-ui-dist": "^5.28.0"
  }
}
