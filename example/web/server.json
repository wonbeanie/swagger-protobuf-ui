{
  "openapi": "3.0.0",
  "info": {
    "title": "Node.js Protobuf API 명세",
    "description": "Protobuf 형식을 사용하여 사용자를 관리하는 API입니다.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "개발 서버"
    }
  ],
  "paths": {
    "/users/{id}": {
      "get": {
        "summary": "ID로 사용자 조회 (Protobuf)",
        "description": "ID를 사용하여 Protobuf 형식으로된 사용자 정보를 조회합니다.",
        "tags": ["Users"],
        "res_message" : "User",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "사용자 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공적인 응답. 응답 본문은 Protobuf 바이너리 데이터입니다.",
            "content": {
              "application/protobuf": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "사용자를 찾을 수 없음"
          }
        }
      }
    },
    "/users/{id}/info": {
      "get": {
        "summary": "ID로 사용자 조회 (JSON)",
        "description": "ID를 사용하여 JSON 형식으로된 사용자 정보를 조회합니다.",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "사용자 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공적인 응답. 응답 본문은 JSON 데이터입니다.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "사용자를 찾을 수 없음"
          }
        }
      }
    },
    "/users": {
      "post": {
        "summary": "새로운 사용자 생성",
        "description": "Protobuf 메시지로부터 새로운 사용자를 생성하고, 생성된 사용자 정보를 Protobuf 형식으로 반환합니다.",
        "tags": ["Users"],
        "req_message" : "User",
        "res_message" : "User",
        "requestBody": {
          "description": "생성할 사용자 객체",
          "required": true,
          "content": {
            "application/protobuf": {
              "schema": {
                "$ref": "#/components/schemas/NewUserInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "사용자 생성 성공. 생성된 사용자 객체를 Protobuf 형식으로 반환합니다.",
            "content": {
              "application/protobuf": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Tag": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "example": 101
          },
          "name": {
            "type": "string",
            "example": "friend"
          }
        }
      },
      "Address": {
        "type": "object",
        "properties": {
          "street": {
            "type": "string",
            "example": "456 Oak Ave"
          },
          "city": {
            "type": "string",
            "example": "Someville"
          },
          "zipCode": {
            "type": "string",
            "example": "67890"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Alice"
          },
          "mainAddress": {
            "$ref": "#/components/schemas/Address"
          },
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tag"
            }
          }
        }
      },
      "NewUserInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Test User"
          },
          "mainAddress": {
            "$ref": "#/components/schemas/Address",
            "example": {
              "street": "123 Test St",
              "city": "Testville",
              "zipCode": "12345"
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tag"
            },
            "example": [
              { "id": 201, "name": "kw" },
              { "id": 202, "name": "won" }
            ]
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Users",
      "description": "사용자 관리 API"
    }
  ]
}